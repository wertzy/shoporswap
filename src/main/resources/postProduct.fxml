<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane maxHeight="400.0" maxWidth="600.0" minHeight="400.0" minWidth="600.0" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="shoporswap.Controller">
   <children>
      <VBox prefHeight="400.0" prefWidth="198.0" style="-fx-border-color: #000000;">
         <children>
            <Label fx:id="clientHomeStorefrontsHeader" alignment="CENTER" prefWidth="200.0" text="My Storefronts">
               <font>
                  <Font name="System Italic" size="14.0" />
               </font>
            </Label>
            <ListView fx:id="clientHomeStorefrontsListView" prefHeight="290.0" prefWidth="196.0" style="-fx-border-color: #000000;" />
            <VBox prefHeight="92.0" prefWidth="196.0" style="-fx-border-color: #000000;">
               <children>
                  <Label fx:id="clientHomeGoToStorefrontNameLabel" alignment="CENTER" prefHeight="20.0" prefWidth="200.0" text="Storefront Name" />
                  <Label fx:id="clientHomeGoToStorefrontOwnerLabel" alignment="CENTER" layoutX="11.0" layoutY="11.0" prefHeight="20.0" prefWidth="200.0" text="Storefront Owner Name" />
                  <Button fx:id="clientHomeGoToStorefrontButton" mnemonicParsing="false" onAction="#postProductToStorefront" prefHeight="25.0" prefWidth="205.0" text="Post Product to Storefront" />
               </children>
            </VBox>
         </children>
      </VBox>
      <Button fx:id="backButton1" alignment="CENTER" contentDisplay="CENTER" layoutX="224.0" layoutY="15.0" mnemonicParsing="false" onAction="#back" prefWidth="100.0" text="Back" />
      <TextArea fx:id="productDescriptionTxtArea" layoutX="223.0" layoutY="137.0" prefHeight="99.0" prefWidth="352.0" promptText="Product Description..." />
      <TextField fx:id="productNametxtFld" layoutX="223.0" layoutY="69.0" prefHeight="27.0" prefWidth="167.0" promptText="product name" />
      <TextField fx:id="productTagsTxtFld" layoutX="223.0" layoutY="279.0" promptText="product tags" />
      <TextField fx:id="productPriceTxtFld" layoutX="223.0" layoutY="343.0" promptText="product price" />
      <Label layoutX="224.0" layoutY="258.0" text="Enter Tags Seperated by a &quot;,&quot; " />
      <Label layoutX="224.0" layoutY="325.0" text="Enter Price (double) " />
      <Label layoutX="226.0" layoutY="114.0" text="Enter a text description with no symbols." />
      <Label fx:id="errorLabel1" visible="false" alignment="TOP_LEFT" layoutX="457.0" layoutY="258.0" prefHeight="63.0" prefWidth="136.0" text="Error:" textFill="RED" wrapText="true" />
      <Label fx:id="successLabel" visible="false" alignment="TOP_LEFT" layoutX="457.0" layoutY="325.0" prefHeight="63.0" prefWidth="136.0" text="Success!" textFill="#01d713" wrapText="true" />
      <VBox layoutX="431.0" layoutY="15.0" prefHeight="74.0" prefWidth="144.0" style="-fx-border-color: #000000;">
         <children>
            <Label alignment="CENTER" prefHeight="17.0" prefWidth="147.0" text="TYPE" textAlignment="CENTER" />
            <RadioButton fx:id="rbSell" mnemonicParsing="false" text="Sell">
               <toggleGroup>
                  <ToggleGroup fx:id="SellOrSwap" />
               </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="rbSwap" mnemonicParsing="false" text="Swap" toggleGroup="$SellOrSwap">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </RadioButton>
         </children>
      </VBox>
   </children>
</AnchorPane>
